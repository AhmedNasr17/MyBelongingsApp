@model MyBelongingsApp.Models.MyTasks

@{
    ViewData["Title"] = "Delete task";
}


<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <img src="~/images/TasksImgs/@Model.ImgName" id="imgPrev" width="88" height="88" />

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeantDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeantDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeadLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeadLine)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MyTaskId" />

        <a class="btn btn-dark col-2 d-flex justify-content-start" asp-action="Index"><i class="fa fa-chevron-left" style="padding-top:4px;"></i> &nbsp; &nbsp; Back to List</a> |
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
